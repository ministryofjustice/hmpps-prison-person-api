{
  "role": {
    "name": "hmpps-prison-person-api"
  },
  "customDimensions": {
    "service.version": "${BUILD_NUMBER}"
  },
  "instrumentation": {
    "logging": {
      "level": "DEBUG"
    }
  },
  "selfDiagnostics": {
    "destination": "console"
  },
  "sampling": {
    "percentage": 100,
    "overrides": [
      {
        "telemetryType": "dependency",
        "attributes": [
          {
            "key": "db.system",
            "value": "postgresql",
            "matchType": "strict"
          }
        ],
        "percentage": 100
      },
      {
        "telemetryType": "dependency",
        "attributes": [
          {
            "key": "server.address",
            "value": "(sign-in|sts.eu).*",
            "matchType": "regexp"
          }
        ],
        "percentage": 10
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "url.path",
            "value": "/health.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 10
      },
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "url.path",
            "value": "/info",
            "matchType": "strict"
          }
        ],
        "percentage": 10
      }
    ]
  }
}
