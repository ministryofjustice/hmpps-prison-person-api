{
  "role": {
    "name": "hmpps-prison-person-api"
  },
  "customDimensions": {
    "service.version": "${BUILD_NUMBER}"
  },
  "instrumentation": {
    "logging": {
      "level": "DEBUG"
    }
  },
  "selfDiagnostics": {
    "destination": "console"
  },
  "sampling": {
    "percentage": 100,
    "overrides": [
      {
        "telemetryType": "request",
        "attributes": [
          {
            "key": "http.url",
            "value": "https?://[^/]+/health.*",
            "matchType": "regexp"
          }
        ],
        "percentage": 10
      },
      {
        "telemetryType": "dependency",
        "attributes": [
          {
            "key": "db.operation",
            "value": "SELECT",
            "matchType": "strict"
          }
        ],
        "percentage": 5
      }
    ]
  }
}
